# EditorConfig ref: https://EditorConfig.org
root = true

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*,.*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# 4 space indentation
[*.py,Dockerfile,Earthfile]
indent_style = space
indent_size = 4

# 2 space indentation
[*.js,*.jsx,*.json,.*.json,*.sh,*.tf,*.tpl,*.hcl,*.yml,*.yaml]
indent_style = space
indent_size = 2

# Tab indentation
[Makefile,go.mod,go.sum,*.go]
indent_style = tab
